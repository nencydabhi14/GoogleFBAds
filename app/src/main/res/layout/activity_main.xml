<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111"/>


    <TextView
        android:id="@+id/interstitialAd"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/teal_700"
        android:gravity="center"
        android:text="Click Here to show InterstitialAd"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/reward_Ad"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Click Here to show Reward Add"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_below="@id/interstitialAd"
        android:background="@color/teal_700"
        android:textColor="@color/white"/>


    <RelativeLayout
        android:id="@+id/ViewRelative"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:layout_centerInParent="true" />


    <TextView
        android:id="@+id/fb_setUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ViewRelative"
        android:layout_marginTop="10dp"
        android:text="Facebook Add Setup next page >>"/>


</RelativeLayout>